@{
    ViewData["Title"] = "Recuperar Senha";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastre-se</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
</head>

<!-- inicio barra superior -->
<header>
    <nav>
        <a class="logo" href="/">Rocket Learning</a>
        <div class="mobile-menu">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
        <ul class="nav-list">
            <li><a href="#">Sobre</a></li>
            <li><a asp-controller="Home" asp-action="Cadastrar">Cadastre-se</a></li>
            <li><a asp-controller="Home" asp-action="Index">Login</a></li>
        </ul>
    </nav>
</header>
<!-- fim barra superior -->

<body>
    <div id="Email-container" style="display: @ViewData["EmailContainerDisplay"];">
        <h1>Recuperar senha</h1>
        <form method="post" action="/usuario/EsqueciMinhaSenha">
            <input type="email" name="email" id="email" placeholder="E-mail" autocomplete="off">
            <input type="submit" value="Enviar">
        </form>
    </div>

    <div id="Codigo-container" style="display: @ViewData["CodigoContainerDisplay"];">
        <h1>Codigo de verificação</h1>
        <form method="post" action="/usuario/VerificarCodigoRedefinicao?email=@ViewData["Email"]">
            <input type="text" name="codigoDigitado" id="codigo" placeholder="Codigo" autocomplete="off">
            <input type="submit" value="Enviar">
        </form>
    </div>

    <div id="Redefinir-container" style="display: @ViewData["RedefinirContainerDisplay"];">
        <h1>Redefinir senha</h1>
        <form method="post" action="/usuario/AtualizarSenhaUsuario?email=@ViewData["Email"]">
            <input type="password" name="novaSenha" id="novaSenha" placeholder="Nova senha" autocomplete="off">
            <input type="submit" value="Redifinir">
        </form>
    </div>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Helvetica;
            color: #ececec;
            border: none;
        }

        body {
            background-image: url('../img/background.jpg');
            background-size: cover;
            background-position-y: -200px;
            background-color: #292b2f;
        }

        textarea:focus, input:focus {
            outline: none;
        }

        a {
            font-size: .8rem;
        }

            a:hover {
                color: #208888;
            }

        #Email-container {
            background-color: #202225;
            margin-left: auto;
            margin-right: auto;
            width: 400px;
            padding: 20px 30px;
            margin-top: 15vh;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 10px 40px #1b1b1b;
            display: block;
        }

        #Codigo-container {
            background-color: #202225;
            margin-left: auto;
            margin-right: auto;
            width: 400px;
            padding: 20px 30px;
            margin-top: 15vh;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 10px 40px #1b1b1b;
            display: none;
        }

        #Redefinir-container {
            background-color: #202225;
            margin-left: auto;
            margin-right: auto;
            width: 400px;
            padding: 20px 30px;
            margin-top: 15vh;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0px 10px 40px #1b1b1b;
            display: none;
        }

        form {
            margin-top: 30px;
            margin-bottom: 40px;
        }

        label, input {
            display: block;
            width: 100%;
            text-align: left;
        }

        label {
            font-weight: bold;
            font-size: .8rem;
        }

        input {
            border-bottom: 2px solid #323232;
            padding: 10px;
            font-size: 1rem;
            margin-bottom: 20px;
            border-radius: 5px;
            background-color: #202225;
        }

            input:focus {
                border-bottom: 2px solid #1eb9b9;
            }

            input::placeholder {
                color: #c6cdd5;
            }

            input[type="submit"] {
                text-align: center;
                text-transform: uppercase;
                border: none;
                height: 40px;
                border-radius: 20px;
                margin-top: 30px;
                cursor: pointer;
                color: #1B223C;
                background-color: #1eb9b9;
                font-weight: bold;
            }

                input[type="submit"]:hover {
                    background-color: #208888;
                    transition: .5s;
                }
        /* INICIO NAVBAR */
        header {
            margin: 0;
            padding: 0;
        }

        a {
            color: #fff;
            text-decoration: none;
            transition: 0.3s;
        }

            a:hover {
                opacity: 0.7;
            }

        .logo {
            font-size: 24px;
        }

        nav {
            display: flex;
            justify-content: space-around;
            align-items: center;
            font-family: Helvetica, Arial;
            background: #202225;
            height: 8vh;
        }

        .nav-list {
            list-style: none;
            display: flex;
        }

            .nav-list li {
                margin-left: 32px;
            }

        li a {
            font-size: 16px; /* tamanho da fonte desejado */
            font-weight: 600;
        }
        /**/
    </style>
</body>
</html>